<!DOCTYPE html>
<html>

<head>
    <title>FoodeX</title> <!-- Titulo página web -->
    <meta charset="utf-8"> <!-- Poder meter simbolos especiales -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script> <!-- JQuery -->
    <meta name="viewport" content="width=device-width, initial-scale=1"> <!-- Bootstrap -->
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css" rel="stylesheet"> <!-- Bootstrap -->
    <link type="text/css" rel="stylesheet" href="/stylesBootstrap.css" /> <!-- Hoja de estilos con Bootstrap -->
    <link rel="stylesheet"href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css"/><!-- Bootstrap Icons -->
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script> <!-- Bootstrap -->
    
    <link rel="icon" href="Resources/logoFondoRedondeado.PNG" type="image" /> <!-- Logo web -->
    <link type="text/css" rel="stylesheet" href="/styles.css"  /> <!-- Hoja de estilos -->
    <script src="app.js"></script> <!-- Scripts -->
</head>

<body>

    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">
            <img src="Resources/logoSinFondoEstrecha.PNG" width="100px" height="40px" class="d-inline-block align-top" alt="">
            FoodeX
        </a>
        <p class="navbar-text">Recetas</p>
    </nav>

    <!-- Header-->
    <header class="bg-dark py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">FoodeX</h1>
                <p class="lead fw-normal text-white-50 mb-0">Tus recetas a un solo click</p>
            </div>
        </div>
    </header>

    <!-- Menu para ver los detalles de una receta -->
    <div id="vista_receta" class="container" style="display: block;">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h1 id="vista_receta_tit" class="recipe-title">{{RecipeTitle}}</h1>
                    <section class="py-5">
                        <div class="container px-4 px-lg-5 mt-5">
                            <div id="vista_receta_gallery" class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                                {{#RecipePhotos}}
                                <img src="{{0}}" alt="{{RecipeTitle}}" class="img-responsive" height="450px" width="450px">
                                {{/RecipePhotos}}
                            </div>
                        </div>
                    </section>
                    <div id="vista_receta_cont">
                        <h2 class="description"> Descripcion: {{RecipeDescription}} </h2>
                        <div class="listContent">
                            <div class="list">
                                <h3 class="ingredientsTitle"> Ingredientes: </h3>
                                <h6 class="ingredientsContent">
                                    <ul>
                                        {{#RecipeIngredients}}
                                        <li type="circle">{{0}}</li>
                                        {{/RecipeIngredients}}

                                        {{^RecipeIngredients}}
                                        <li type="circle"> Sin Ingredientes... </li>
	                                    {{/RecipeIngredients}}
                                    </ul>

                                </h6>
                            </div>
                            <div class="list">
                                <h3 class="preparationTitle"> Preparacion: </h3>
                                <h6 class="preparationContent">
                                    <ol>
                                        {{#RecipePreparation}}
                                        <li>{{0}}</li>
                                        {{/RecipePreparation}}

                                        {{^RecipePreparation}}
                                        <li> Sin Preparacion... </li>
	                                    {{/RecipePreparation}}
                                    </ol>
                                </h6>
                            </div>
                        </div>
                    </div>
                    <div id="vista_recta_buttons" class="btn-toolbar">
                        <button id="btn-notShowRecipeView" href="/" class="btn btn-primary">Volver</button>
                        <button id="btn-edit-{{id}}" href="/showMore/{{id}}/edit" class="btn btn-primary">Editar</button>
                        <button id="btn-del-notShowRecipeView-{{id}}" href="/showMore/{{id}}/delete" class="btn btn-primary">Borrar</button>
                    </div>
                    <br><br><br>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer-->
    <footer class="py-5 bg-dark">
        <div class="container"><p class="m-0 text-center text-white">Copyright &copy; Diego Isaac Fernández Conde,David Pimentel Montes,Pablo
            Requejo Postlbauer. All rights reserved.</p></div>
    </footer>
</body>

</html>